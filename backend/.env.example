# Application Settings
APP_NAME=Health Diagnostics AI
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings (Using SQLite for development)
DATABASE_URL=sqlite:///./health_diagnostics.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Settings (for Celery)
REDIS_URL=redis://localhost:6379/0

# OpenAI Settings (Optional - for LLM features)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.json

# OCR Settings
OCR_LANGUAGE=en
OCR_GPU=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Medical Disclaimer
DISCLAIMER_TEXT=This analysis is for informational purposes only and should not be considered medical advice. Always consult with a qualified healthcare professional.
